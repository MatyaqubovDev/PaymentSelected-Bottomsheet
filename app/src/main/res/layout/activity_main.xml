    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".MainActivity">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

              <Button
                  android:id="@+id/btn_payment"
                  android:layout_width="match_parent"
